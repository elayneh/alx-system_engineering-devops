#!/usr/bin/env bash
# This is to redirect the the server to other page

sudo apt-get update
sudo apt-get install nginx -y
sudo ufw allow 22
sudo ufw allow 80
sudo ufw enable
sudo ufw status
sudo echo "Hello World!" | sudo tee /var/www/html/index.nginx-debian.html
sed -i '/listen 80 default_server/a rewrite ^/redirect_me https://www.github.com/elayneh permanent;' /etc/nginx/sites-available/default
sudo service nginx restart

